{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@root/*": ["src/express-web-api/*"],
      "@utils/*": ["src/express-web-api/utils/*"],
      "@exceptions/*": ["src/express-web-api/utils/exceptions/*"]
    }
  },

  "include": ["src/**/*"],
}